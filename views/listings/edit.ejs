<% layout("layouts/boilerplate.ejs") %>

<div class="container my-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="form-container p-3 border rounded shadow-sm">
        <h1 class="mb-4 text-center">Edit Your Hotel Listing</h1>
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=PUT"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input
              type="text"
              id="title"
              name="listing[title]"
              class="form-control"
              value="<%= listing.title %>"
              required
            />
            <div class="valid-feedback">Looks good</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea
              id="description"
              class="form-control"
              name="listing[description]"
              required
              rows="4"
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a valid description</div>
          </div>

          <!-- Original Image -->
          <div class="mb-3">
            <label class="form-label fw-bold">Original Listing Image:</label>
            <div class="text-center mb-2">
              <img
                src="<%= originalImageUrl %>"
                alt="Original Listing Image"
                class="img-fluid rounded"
                style="max-width: 250px; height: auto;"
              />
            </div>
          </div>

          <!-- New Image Upload -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input
              type="file"
              id="image"
              name="listing[image]"
              class="form-control"
            />
          </div>

          <!-- Price and Location -->
          <div class="row">
            <div class="mb-3 col-12 col-md-4">
              <label for="price" class="form-label">Price (₹):</label>
              <input
                type="number"
                id="price"
                class="form-control"
                name="listing[price]"
                value="<%= listing.price %>"
                required
              />
              <div class="invalid-feedback">Please enter a valid price</div>
            </div>

            <div class="mb-3 col-12 col-md-8">
              <label for="location" class="form-label">Location:</label>
              <input
                type="text"
                id="location"
                class="form-control"
                name="listing[location]"
                value="<%= listing.location %>"
                required
              />
              <div class="invalid-feedback">Please enter a valid location</div>
            </div>
          </div>

          <!-- Country -->
          <div class="mb-3">
            <label for="country" class="form-label">Country:</label>
            <input
              type="text"
              id="country"
              class="form-control"
              name="listing[country]"
              value="<%= listing.country %>"
              required
            />
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>

          <button type="submit" class="btn btn-dark w-100 mt-3">Edit</button>
        </form>

        <div class="text-center mt-3">
          <a class="back-link" href="/listings">← Back to Listings</a>
        </div>
      </div>
    </div>
  </div>
</div>
