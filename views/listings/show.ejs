<% layout("layouts/boilerplate.ejs") %>

<div class="container mt-4">

  <!-- Title -->
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="fw-bold mb-3"><%= listing.title %></h2>
    </div>
  </div>

  <!-- Image and Listing Details -->
  <div class="row mb-4">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <img src="<%= listing.image.url %>" class="card-img-top object-fit-cover" alt="listing_img" style="height: 400px; object-fit: cover;" />
        <div class="card-body p-4">
          <h5 class="text-muted mb-2">Hosted by <i><%= listing.owner.username %></i></h5>
          <p class="mb-2"><%= listing.description %></p>
          <p class="fw-bold fs-5 text-danger">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="text-muted"><i class="fa-solid fa-location-dot me-1"></i><%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>

      <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
      <div class="mt-3 d-flex gap-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger px-4" onclick="return confirm('Are you sure you want to delete this listing?');">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Reviews Section -->
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <hr />
      <% if(currentUser) { %>
      <h4 class="mb-3">Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating:</label>
          <div class="star-rating d-flex align-items-center gap-2">
            <% for(let i = 1; i <= 5; i++) { %>
              <input type="radio" name="review[rating]" id="star-<%= i %>" value="<%= i %>">
              <label for="star-<%= i %>">&#9733;</label>
            <% } %>
          </div>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comment:</label>
          <textarea id="comment" name="review[comment]" rows="4" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter your comment.</div>
        </div>
        <button type="submit" class="btn btn-outline-dark px-4">Submit</button>
      </form>
      <hr />
      <% } %>

      <!-- All Reviews -->
      <h5 class="mb-3"><b>All Reviews</b></h5>
      <div class="row">
        <% for (let review of listing.reviews) { %>
        <div class="col-md-6 mb-4">
          <div class="card border-0 shadow-sm rounded-4 p-3">
            <h6><i class="fa-solid fa-user me-2"></i><%= review.author.username %></h6>
            <p class="mb-1"><%= review.comment %></p>
            <div class="star-display text-warning mb-2">
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= review.rating) { %>
                  <i class="fa-solid fa-star"></i>
                <% } else { %>
                  <i class="fa-regular fa-star"></i>
                <% } %>
              <% } %>
            </div>
            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this review?');">Delete</button>
            </form>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
