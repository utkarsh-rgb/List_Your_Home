<% layout("layouts/boilerplate.ejs") %>

<style>
    body {
        background-color: #fff9f9;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .container {
        max-width: 900px;
    }

    .listing-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(254, 66, 77, 0.15);
        padding: 2.5rem 2rem;
        border: 1px solid #fed2d6;
        margin-top: 2rem;
    }

    h1 {
        color: #000000;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        letter-spacing: -0.02em;
    }

    label {
        color: #333333;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 1.5px solid #fe424d;
        border-radius: 8px;
        padding: 0.65rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fff;
        color: #222222;
    }

    .form-control::placeholder {
        color: #fe818a;
    }

    .form-control:focus {
        border-color: #fe424d;
        box-shadow: 0 0 8px rgba(254, 66, 77, 0.4);
        outline: none;
        background: #fff5f6;
        transform: translateY(-2px);
    }

    .form-control.is-invalid {
        border-color: #ff6a78;
        background: #ffe5e8;
    }

    .form-control.is-valid {
        border-color: #fe424d;
        background: #fff0f1;
    }

    .invalid-feedback {
        color: #fe424d;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .btn-primary {
        background-color: #fe424d;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        width: 100%;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        color: white;
    }

    .btn-primary:hover {
        background-color: #d83941;
        box-shadow: 0 8px 20px rgba(216, 57, 65, 0.5);
        transform: translateY(-2px);
    }

    .btn-primary:active {
        transform: translateY(0);
        box-shadow: none;
        background-color: #b33139;
    }

    .back-link {
        color: #fe424d;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        text-decoration: underline;
        color: #d83941;
    }

    @media (max-width: 768px) {
        .listing-card {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }
        
        h1 {
            font-size: 1.75rem;
        }
    }

    @media (max-width: 576px) {
        .listing-card {
            padding: 1.5rem 1rem;
            margin: 1rem;
        }
        
        h1 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="container">
    <div class="listing-card">
        <h1>Add a New Hotel Listing</h1>
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label for="title">Title:</label>
                <input 
                    type="text" 
                    id="title" 
                    name="listing[title]" 
                    class="form-control" 
                    placeholder="Enter Title" 
                    required
                />
                <div class="invalid-feedback">Please enter a title</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description">Description:</label>
                <textarea 
                    id="description" 
                    name="listing[description]" 
                    class="form-control" 
                    placeholder="Enter Description" 
                    required 
                    rows="4"
                ></textarea>
                <div class="invalid-feedback">Please enter the description</div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label for="image">Upload Image</label>
                <input 
                    type="file" 
                    id="image" 
                    name="listing[image]" 
                    class="form-control" 
                    required
                />
                <div class="invalid-feedback">Please upload an image</div>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label for="price">Price (₹):</label>
                <input 
                    type="number" 
                    id="price" 
                    name="listing[price]" 
                    class="form-control" 
                    placeholder="Enter Price" 
                    required
                />
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>

            <!-- Location & Country -->
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label for="location">Location:</label>
                    <input 
                        type="text" 
                        id="location" 
                        name="listing[location]" 
                        class="form-control" 
                        placeholder="Enter Location" 
                        required
                    />
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label for="country">Country:</label>
                    <input 
                        type="text" 
                        id="country" 
                        name="listing[country]" 
                        class="form-control" 
                        placeholder="Enter Country" 
                        required
                    />
                    <div class="invalid-feedback">Enter a valid country</div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 mt-3">Add Listing</button>
        </form>

        <!-- Back Link -->
        <div class="text-center mt-3">
            <a class="back-link" href="/listings">← Back to Listings</a>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');

        Array.from(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });

        const inputs = document.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.addEventListener('input', function () {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        });
    })();
</script>
