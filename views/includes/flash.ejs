<style>
.custom-alert {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    animation: slideInDown 0.5s ease-out;
    position: relative;
    overflow: hidden;
}

.custom-alert::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    animation: shimmer 2s infinite;
}

.custom-alert-success {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
}

.custom-alert-error {
    background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
}

@keyframes slideInDown {
    from {
        transform: translateY(-100%);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
}

.pulse-icon {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}
</style>

<!-- Animated Success Alert -->
<% if (success && success.length) { %>
<div class="alert custom-alert custom-alert-success alert-dismissible fade show col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 my-4" role="alert">
    <div class="d-flex align-items-center text-white">
        <div class="pulse-icon me-3">
            <i class="bi bi-check-circle-fill fs-2"></i>
        </div>
        <div class="flex-grow-1">
            <h5 class="alert-heading mb-2 fw-bold">üéâ Awesome!</h5>
            <p class="mb-0 opacity-90"><%= success %></p>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>

<!-- Animated Error Alert -->
<% if (error && error.length) { %>
<div class="alert custom-alert custom-alert-error alert-dismissible fade show col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 my-4" role="alert">
    <div class="d-flex align-items-center text-white">
        <div class="pulse-icon me-3">
            <i class="bi bi-x-circle-fill fs-2"></i>
        </div>
        <div class="flex-grow-1">
            <h5 class="alert-heading mb-2 fw-bold">‚ö†Ô∏è Hold up!</h5>
            <p class="mb-0 opacity-90"><%= error %></p>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>
