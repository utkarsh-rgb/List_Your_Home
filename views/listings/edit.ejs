<% layout("layouts/boilerplate.ejs") %>

<style>
    body {
        background-color: #fff9f9;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #3b3b3b;
    }

    .container {
        max-width: 900px;
    }

    .form-container {
        background: white;
        border-radius: 16px;
        padding: 2.5rem 2rem;
        box-shadow: 0 6px 24px rgba(254, 66, 77, 0.15);
        border: 1px solid #fed2d6;
        margin-top: 1.5rem;
    }

    h1 {
        color: #000000;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    label {
        color: #333333;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 1.5px solid #fe424d;
        border-radius: 8px;
        padding: 0.65rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fff;
        color: #222222;
    }

    .form-control::placeholder {
        color: #fe818a;
    }

    .form-control:focus {
        border-color: #fe424d;
        box-shadow: 0 0 8px rgba(254, 66, 77, 0.4);
        outline: none;
        background: #fff5f6;
        transform: translateY(-2px);
    }

    .form-control.is-invalid {
        border-color: #ff6a78;
        background: #ffe5e8;
    }

    .form-control.is-valid {
        border-color: #fe424d;
        background: #fff0f1;
    }

    .img-fluid {
        max-width: 250px;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(220, 38, 38, 0.2);
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .invalid-feedback {
        color: #fe424d;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .btn-dark {
        background-color: #222222;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        width: 100%;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(34, 34, 34, 0.25);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-dark:hover {
        background-color: #000000;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    }

    .btn-dark:active {
        transform: translateY(0);
        box-shadow: none;
        background-color: #222222;
    }

    .back-link {
        color: #fe424d;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-top: 1.5rem;
        font-size: 1rem;
        text-align: center;
    }

    .back-link:hover {
        color: #d1323a;
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .form-container {
            padding: 2rem 1.5rem;
            margin: 1rem;
        }

        h1 {
            font-size: 1.75rem;
        }
    }

    @media (max-width: 576px) {
        .form-container {
            padding: 1.5rem 1rem;
        }

        h1 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="container">
    <div class="form-container">
        <h1>Edit Your Hotel Listing</h1>
        <form
            method="POST"
            action="/listings/<%= listing._id %>?_method=PUT"
            class="needs-validation"
            novalidate
            enctype="multipart/form-data"
        >
            <!-- Title -->
            <div class="mb-3">
                <label for="title">Title:</label>
                <input
                    type="text"
                    id="title"
                    name="listing[title]"
                    class="form-control"
                    value="<%= listing.title %>"
                    required
                />
                <div class="valid-feedback">Looks good</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description">Description:</label>
                <textarea
                    id="description"
                    class="form-control"
                    name="listing[description]"
                    required
                    rows="4"
                ><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter a valid description</div>
            </div>

            <!-- Original Image -->
            <div class="mb-3">
                <label class="form-label fw-bold">Original Listing Image:</label>
                <div class="text-center mb-2">
                    <img
                      src="<%= originalImageUrl %>"
                      alt="Original Listing Image"
                      class="img-fluid rounded"
                    />
                </div>
            </div>

            <!-- New Image Upload -->
            <div class="mb-3">
                <label for="image">Upload New Image</label>
                <input
                    type="file"
                    id="image"
                    name="listing[image]"
                    class="form-control"
                />
            </div>

            <!-- Price and Location Row -->
            <div class="row">
                <div class="mb-3 col-12 col-md-4">
                    <label for="price">Price (₹):</label>
                    <input
                        type="number"
                        id="price"
                        class="form-control"
                        name="listing[price]"
                        value="<%= listing.price %>"
                        required
                    />
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>

                <div class="mb-3 col-12 col-md-8">
                    <label for="location">Location:</label>
                    <input
                        type="text"
                        id="location"
                        class="form-control"
                        name="listing[location]"
                        value="<%= listing.location %>"
                        required
                    />
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label for="country">Country:</label>
                <input
                    type="text"
                    id="country"
                    class="form-control"
                    name="listing[country]"
                    value="<%= listing.country %>"
                    required
                />
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>

            <button type="submit" class="btn btn-dark w-100 mt-3">Edit</button>
        </form>

        <div class="text-center">
            <a href="/listings" class="back-link">← Back to Listings</a>
        </div>
    </div>
</div>

<script>
    (function () {
        'use strict';

        const forms = document.querySelectorAll('.needs-validation');

        Array.from(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });

        const inputs = document.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.addEventListener('input', function () {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        });
    })();
</script>
