<% layout("layouts/boilerplate.ejs") %>

<style>
    /* Subtle Red #fe424d and Black Theme Signup */

    body {
        background-color: #fff9f9;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .red-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: #fff9f9;
    }

    .login-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 6px 24px rgba(254, 66, 77, 0.15);
        padding: 3rem 2.5rem;
        border: 1px solid #fed2d6;
        width: 100%;
        max-width: 420px;
        transition: box-shadow 0.3s ease;
    }

    .login-card:hover {
        box-shadow: 0 12px 36px rgba(254, 66, 77, 0.25);
    }

    .login-title {
        color: #000000;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: -0.025em;
    }

    .form-label {
        color: #333333;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .red-input {
        border: 1.5px solid #fe424d;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #fff;
        color: #222222;
    }

    .red-input::placeholder {
        color: #fe818a;
    }

    .red-input:focus {
        border-color: #fe424d;
        box-shadow: 0 0 8px rgba(254, 66, 77, 0.4);
        outline: none;
        background: #fff5f6;
        transform: translateY(-2px);
    }

    .red-input.is-invalid {
        border-color: #ff6a78;
        background: #ffe5e8;
    }

    .red-input.is-valid {
        border-color: #fe424d;
        background: #fff0f1;
    }

    .invalid-feedback {
        color: #fe424d;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .red-btn {
        background-color: #fe424d;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        font-size: 1rem;
        width: 100%;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
    }

    .red-btn:hover {
        background-color: #d83941;
        box-shadow: 0 8px 20px rgba(216, 57, 65, 0.5);
        transform: translateY(-2px);
    }

    .red-btn:active {
        transform: translateY(0);
        box-shadow: none;
        background-color: #b33139;
    }

    /* Responsive */
    @media (max-width: 992px) {
        .login-card {
            padding: 2.5rem 2rem;
            max-width: 360px;
        }

        .login-title {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 576px) {
        .login-card {
            padding: 2rem 1.5rem;
            max-width: 100%;
            margin: 0 1rem;
        }

        .login-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="red-login-container">
    <div class="login-card">
        <h1 class="login-title">Sign Up for Hotel</h1>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    class="form-control red-input" 
                    placeholder="Enter your username" 
                    required
                />
                <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-control red-input" 
                    placeholder="Enter your email" 
                    required
                />
                <div class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-control red-input" 
                    placeholder="Enter your password" 
                    required
                />
                <div class="invalid-feedback">Please enter your password.</div>
            </div>

            <button type="submit" class="btn red-btn">Sign Up</button>
        </form>
    </div>
</div>

<script>
    (function() {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');

        Array.from(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });

        const inputs = document.querySelectorAll('.red-input');
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        });
    })();
</script>
