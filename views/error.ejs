<% layout("/layouts/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center min-vh-75 py-4">
  <div class="d-flex flex-column align-items-center text-center p-4 bg-white rounded shadow-lg w-100" style="max-width: 500px;">
    
    <h1 class="display-1 fw-bold text-danger mb-3">Oops!</h1>
    
    <h2 class="h4 fw-semibold mb-3 text-dark">
      <%= typeof errorTitle !== "undefined" ? errorTitle : "Something went wrong" %>
    </h2>
    
    <p class="text-muted mb-3">
      <%= typeof errorMessage !== "undefined" ? errorMessage : "An unexpected error occurred. Please try again later." %>
    </p>
    
    <button 
      onclick="window.location.href='/'" 
      class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
      <i class="fas fa-arrow-left me-2" aria-hidden="true"></i> Back to Home
    </button>
  
  </div>
</div>
